<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/lout_back_no_stroke"
    tools:context=".activity.ActivityMenu">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                style="@style/ListElement"
                android:layout_margin="5dp"
                android:elevation="10dp">
\
                <LinearLayout
                    android:id="@+id/lnDostoprim"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="160dp"
                        android:scaleType="centerCrop"
                        android:layout_height="80dp"
                        android:layout_gravity="end"
                        android:layout_margin="10dp"
                        android:src="@drawable/dostoprim_manu" />

                    <View
                        android:id="@+id/divider2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?android:attr/listDivider" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:textColor="#000000"
                        android:textSize="20dp"
                        android:layout_margin="10dp"
                        android:text="Достопримечательности"/>



                </LinearLayout>

            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                style="@style/ListElement"
                android:layout_margin="5dp"
                android:elevation="10dp">


                <LinearLayout
                    android:id="@+id/lnPlyazhi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="160dp"
                        android:scaleType="centerCrop"
                        android:layout_height="80dp"
                        android:layout_gravity="start"
                        android:layout_margin="10dp"
                        android:src="@drawable/plyazi_menu" />

                    <View
                        android:id="@+id/divider4"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?android:attr/listDivider" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:textColor="#000000"
                        android:textSize="20dp"
                        android:layout_margin="10dp"
                        android:text="Пляжи, мысы, бухты"/>



                </LinearLayout>

            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                style="@style/ListElement"
                android:layout_margin="5dp"
                android:elevation="10dp">


                <LinearLayout
                    android:id="@+id/lnEkskursii"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="160dp"
                        android:scaleType="centerCrop"
                        android:layout_height="80dp"
                        android:layout_gravity="end"
                        android:layout_margin="10dp"
                        android:src="@drawable/ekskursii_menu" />

                    <View
                        android:id="@+id/divider3"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?android:attr/listDivider" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:textColor="#000000"
                        android:textSize="20dp"
                        android:layout_margin="10dp"
                        android:text="Экскурсии"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                style="@style/ListElement"
                android:layout_margin="5dp"
                android:elevation="10dp">

                <LinearLayout
                    android:id="@+id/lnExtremal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="160dp"
                        android:scaleType="centerCrop"
                        android:layout_height="80dp"
                        android:layout_gravity="start"
                        android:layout_margin="10dp"
                        android:src="@drawable/extrimal_menu" />

                    <View
                        android:id="@+id/divider5"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?android:attr/listDivider" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:textColor="#000000"
                        android:textSize="20dp"
                        android:layout_margin="10dp"
                        android:text="Экстремальный отдых"/>


                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </ScrollView>
</LinearLayout>